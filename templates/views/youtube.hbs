    <!-- Main Video -->
    <div class="youtube-main-video">
      <iframe id="mainVideo" src="{{youtube.mainVideo}}" frameborder="0" allowfullscreen></iframe>
    </div>

      <!-- Subscribe -->
    <div class="youtube-subscribe">
      <a href="https://www.youtube.com/@datasciencewithrohan" target="_blank" class="subscribe-btn">
        Subscribe <i class="fas fa-bell"></i>
      </a>
    </div>

    <!-- Filter Buttons -->
    <div class="youtube-filters">
      <button class="filter-btn active" data-category="all">All</button>
      <button class="filter-btn" data-category="python">Python</button>
      <button class="filter-btn" data-category="sql">SQL</button>
      <button class="filter-btn" data-category="ml">Machine Learning</button>
      <button class="filter-btn" data-category="dl">Deep Learning</button>
    </div>

    <!-- Thumbnails -->
    <div class="youtube-thumbnails">
      {{#each youtube.categories}}
        {{#each this}}
          <iframe 
            class="yt-thumb" 
            src="{{this}}" 
            frameborder="0" 
            allowfullscreen 
            data-category="{{@../key}}">
          </iframe>
        {{/each}}
      {{/each}}
    </div>
  </section>

  <script src="/js/youtube.js"></script>

        